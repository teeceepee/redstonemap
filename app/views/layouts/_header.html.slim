nav.navbar.navbar-default
  .container
    .navbar-header
      button.navbar-toggle.collapsed type="button" data={toggle: 'collapse', target: '#rsm-navbar-collapse'}
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      = link_to 'RedStoneMap', root_path, class: 'navbar-brand'

    .navbar-collapse.collapse#rsm-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li
          = link_to 'Companies', companies_path
        li
          = link_to 'About', about_path
        - if user_signed_in?
          li.dropdown
            = link_to '#', class: 'dropdown-toggle', 'data-toggle' => "dropdown" do
              = current_user.email
              span.caret
            ul.dropdown-menu
              li
                = link_to('Sign out', destroy_user_session_path, method: :delete)
        - else
          li
            = link_to 'Sign in', new_user_session_path

